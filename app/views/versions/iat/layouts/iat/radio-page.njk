{% block content %}
  <form method="post" novalidate>

    {% if caption %}
    <span class="govuk-caption-l">{{ caption }}</span>
    {% endif %}
    <h1 class="govuk-heading-l">{{ h1 }}</h1>

    {% if hintHtml %}
      <div class="govuk-body">{{ hintHtml | safe }}</div>
    {% endif %}

    {{ govukRadios({
      idPrefix: inputName,
      name: inputName,
      items: radios
    }) }}

    {{ govukButton({ text: "Continue" }) }}

  </form>
{% endblock %}