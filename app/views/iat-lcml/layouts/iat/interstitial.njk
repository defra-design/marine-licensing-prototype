{# iat-lcml/layouts/iat/interstitial.njk #}

{% extends "layouts/main.html" %}

{% from "govuk/components/button/macro.njk" import govukButton %}

{% block pageTitle %}
  {{ activityName }} â€“ Marine licence IAT
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">Activity {{ currentIndex }}</span>
      <h1 class="govuk-heading-l">{{ activityName }}</h1>

      {% if autoMcms %}
        <p class="govuk-body">This activity always requires a standard marine licence. No further questions are needed for this activity.</p>
        <form method="post" novalidate>
          {{ govukButton({ text: "Continue to next activity" }) }}
        </form>
      {% else %}
        <p class="govuk-body">We need to ask some questions about your construction activity to work out what type of permission you need.</p>
        <form method="post" novalidate>
          {{ govukButton({ text: "Continue" }) }}
        </form>
      {% endif %}
    </div>
  </div>
{% endblock %}
