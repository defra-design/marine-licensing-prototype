{# iat-lcml/layouts/iat/add-another.njk #}

{% extends "layouts/main.html" %}

{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block pageTitle %}
  {% if data['errorthispage'] == "true" %}
    Error:
  {% endif %}
  Do you have another {{ activityName | lower }} activity to add? â€“ Marine licence IAT
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% if data['errorthispage'] == "true" %}
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: [
            {
              text: "Select yes if you have another " + activityName | lower + " activity to add",
              href: "#add_another"
            }
          ]
        }) }}
      {% endif %}

      <form method="post" novalidate>

        {{ govukRadios({
          idPrefix: "add_another",
          name: "add_another",
          fieldset: {
            legend: {
              text: "Do you have another " + activityName | lower + " activity to add?",
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          items: [
            { value: "yes", text: "Yes" },
            { value: "no", text: "No" }
          ],
          errorMessage: {
            text: "Select yes if you have another " + activityName | lower + " activity to add"
          } if data['errortypeone'] == "true"
        }) }}

        {{ govukButton({ text: "Continue" }) }}

      </form>
    </div>
  </div>
{% endblock %}
